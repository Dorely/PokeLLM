<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>2d820652-2822-4dd8-9dcc-6d233d79434a</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="appsettings.json" />
    <None Remove="Prompts\CombatPhase.md" />
    <None Remove="Prompts\ExplorationPhase.md" />
    <None Remove="Prompts\GameSetupPhase.md" />
    <None Remove="Prompts\LevelUpPhase.md" />
    <None Remove="Prompts\UnifiedContextSubroutine.md" />
