{
  "inputs": [],
  "servers": {
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [ "@upstash/context7-mcp" ],
      "env": {}
    },
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "."
      ],
      "env": {}
    },
    "sequential-thinking": {
      "type": "stdio",
      "command": "npx",
      "args": [ "-y", "@modelcontextprotocol/server-sequential-thinking" ],
      "env": {}
    }
  }
}